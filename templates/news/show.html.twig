{% extends 'layout.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}

{% block body %}
<div class="container-fluid mb-4">
    <div class="how2 how2-cl4 flex-s-c mt-3">
        <h3 class="f1-m-2 cl3 tab01-title">
            <a href="{{ path('news_index') }}" class="text-dark"><i class="fa fa-step-backward"></i> {{ news.title }}</a>
        </h3>
    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Titel</th>
            <td>{{ news.title }}</td>
            <td colspan="2" rowspan="3">
                <div class="row">
                    <div class="col-md-12">
                        <a href="#" class="wrap-pic-w hov1 trans-03">
                            <img src="{{ asset('uploads/news/big/'~news.image) }}" alt="IMG">
                        </a>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <th>Inhalt</th>
            <td>{{ news.content }}</td>
        </tr>
        <tr>
            <th>Hinzugef√ºgt am</th>
            <td>{{ news.createdat ? news.createdat|date('d.M.Y H:i') : '' }}</td>
        </tr>
        <tr>
            <th>Bearbeitet am</th>
            <td>{{ news.updatedat ? news.updatedat|date('d.M.Y H:i') : '' }}</td>
        </tr>
        </tbody>
    </table>


    <a href="{{ path('news_edit', {'id': news.id}) }}" class="btn btn-outline-dark btn-block">Bearbeiten</a>

    {{ include('news/_delete_form.html.twig') }}
</div>
{% endblock %}
