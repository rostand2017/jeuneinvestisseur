{% extends 'layout.html.twig' %}

{% block title %}Kategorie {{ category.title }}{% endblock %}

{% block body %}
    <div class="container-fluid mb-4">
        <div class="how2 how2-cl4 flex-s-c mt-3">
            <h3 class="f1-m-2 cl3 tab01-title">
                <a href="{{ path('category_index') }}" class="text-dark"><i class="fa fa-step-backward"></i> {{ category.title }}</a>
            </h3>
        </div>
        <table class="table">
            <tbody>
            <tr>
                <th>Titel</th>
                <td>{{ category.title }}</td>
                <td colspan="2" rowspan="3">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="#" class="wrap-pic-w hov1 trans-03">
                                <img src="{{ asset('uploads/category/big/'~category.image) }}" alt="IMG">
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <th>Beschreibung</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Hinzuf√ºgt am</th>
                <td>{{ category.createdat | date('d.M.Y') }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-outline-dark btn-block">Bearbeiten</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
