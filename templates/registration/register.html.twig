{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 m-4" style="box-shadow: #5f5d5d 3px 3px 5px">
            <div class="p-4 mb-4" style="background: #17b978; color: white;">
                <h1>RxNews</h1>
                <h6>Abonnieren Sie, um weitere Neuigkeiten zu erhalten</h6>
            </div>
            {{ form_start(registrationForm) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(registrationForm) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.name, {'attr': {'placeholder': 'Geben Sie Ihr Name ein'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.email, {'attr': {'placeholder': 'Geben Sie Ihre E-mail ein'}}) }}
            </div>
            {{ form_row(registrationForm.plainPassword, {'attr': {'placeholder': 'Geben Sie Ihr Passwort ein'}}) }}
            <div class="p-3">{{ form_row(registrationForm.agreeTerms, {'label': 'Ich stimme Term zu'}) }}</div>

            <button class="btn btn-dark btn-block m-2">Anmelden</button>
            {{ form_end(registrationForm) }}
            <div class="form-group text-center">
                <a href="{{ path('app_login') }}"><small>Ich bin schon angemelden</small></a>
            </div>
        </div>
    </div>
    <div class="text-center">
        <a href="{{ path('index') }}" class="text-success"><i class="fa fa-home"></i> zur√ºck zur Homepage</a>
    </div>
{% endblock %}
