{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
    <div class="form-group">
        {{ form_row(form.name, {'attr': {'placeholder': 'Geben Sie Ihr Name ein'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.email, {'attr': {'placeholder': 'Geben Sie Ihre E-mail ein'}}) }}
    </div>
    {{ form_row(form.plainPassword, {'label':'Passwort', 'attr': {'placeholder': 'Geben Sie Ihr Passwort ein'}}) }}
    {# {{ form_row(form.roles, {'label': "Benutzertyp"}) }} #}
    <button class="btn btn-outline-dark btn-block">{{ button_label|default('Speichern') }}</button>
{{ form_end(form) }}
