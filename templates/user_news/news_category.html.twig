{% extends 'layout.html.twig' %}
{% block title %}Category L2{% endblock %}
{% block styles %}{% endblock %}

{% block body %}
    <!-- Breadcrumb -->
    <div class="container">
        <div class="bg0 flex-wr-sb-c p-rl-20 p-tb-8">
            <div class="f2-s-1 p-r-30 m-tb-6">
                <a href="{{ path('index') }}" class="breadcrumb-item f1-s-3 cl9">
                    Homepage
                </a>
                <span class="breadcrumb-item f1-s-3 cl9">
					{{ category.title }}
				</span>
            </div>

            <form class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
                <input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="q" placeholder="Search">
                <button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
                    <i class="zmdi zmdi-search"></i>
                </button>
            </form>
        </div>
    </div>

    <!-- Page heading -->
    <div class="container p-t-4 p-b-40">
        <h2 class="f1-l-1 cl2">
            {{ category.title }}
        </h2>
    </div>

    <!-- Feature post -->
    {% if news | length > 0 %}
        <section class="bg0">
            <div class="container">
                <div class="row m-rl--1">
                    <div class="col-12 p-rl-1 p-b-2">
                        <div class="bg-img1 size-a-3 how1 pos-relative" style="background-image: url('{{ images_blog_url }}{{ news[0].image }}');">
                            <a href="{{ path('news_detail', {news: news[0].id, title: news[0].title}) }}" class="dis-block how1-child1 trans-03"></a>

                            <div class="flex-col-e-s s-full p-rl-25 p-tb-20">
                                <a href="{{ path('news_category', {category: news[0].category.id, title: news[0].category.title}) }}" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
                                    {{ news[0].category.title }}
                                </a>

                                <h3 class="how1-child2 m-t-14 m-b-10">
                                    <a href="{{ path('news_detail', {news: news[0].id, title: news[0].title}) }}" class="how-txt1 size-a-6 f1-l-1 cl0 hov-cl10 trans-03">
                                        {{ news[0].title }}
                                    </a>
                                </h3>

                                <span class="how1-child2">

								<span class="f1-s-3 cl11">
									{{ news[0].category.createdat | date('M d') }}
								</span>
							</span>
                            </div>
                        </div>
                    </div>
                    {% set tableSize = news | length - 1 %}
                    {% if tableSize > 4 %}
                        {% set tableSize = 4 %}
                    {% endif %}
                    {% if tableSize > 0 %}
                        {% for i in 1..tableSize%}
                            <div class="col-sm-6 col-md-3 p-rl-1 p-b-2">
                                <div class="bg-img1 size-a-14 how1 pos-relative" style="background-image: url('{{ thumbnails_blog_url }}{{ news[i].image }}');">
                                    <a href="{{ path('news_detail', {news: news[i].id, title: news[i].title}) }}" class="dis-block how1-child1 trans-03"></a>

                                    <div class="flex-col-e-s s-full p-rl-25 p-tb-20">
                                        <a href="{{ path('news_category', {category: news[i].category.id, title: news[i].category.title}) }}" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
                                            {{ news[i].category.title }}
                                        </a>

                                        <h3 class="how1-child2 m-t-14">
                                            <a href="{{ path('news_detail', {news: news[i].id, title: news[i].title}) }}" class="how-txt1 size-h-1 f1-m-1 cl0 hov-cl10 trans-03">
                                                {{ news[i].title }}
                                            </a>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </section>
    {% endif %}

    {% set tableSize = news | length - 1 %}
    {% if tableSize > 4 %}
        <section class="bg0 p-t-110 p-b-25">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8 p-b-80">
                    <div class="row">
                        {% for i in 4..tableSize %}
                            <div class="col-sm-6 p-r-25 p-r-15-sr991">
                                <div class="p-b-53">
                                    <a href="{{ path('news_detail', {news: news[i].id, title: news[i].title}) }}" class="wrap-pic-w hov1 trans-03">
                                        <img src="{{ thumbnails_blog_url }}{{ news[i].image }}" alt="{{ news[i].title }}">
                                    </a>

                                    <div class="flex-col-s-c p-t-16">
                                        <h5 class="p-b-5 txt-center">
                                            <a href="{{ path('news_detail', {news: news[i].id, title: news[i].title}) }}" class="f1-m-3 cl2 hov-cl10 trans-03">
                                                {{ news[i].title }}
                                            </a>
                                        </h5>

                                        <div class="cl8 txt-center p-b-17">
                                            <a href="{{ path('news_category', {category: news[i].category.id, title: news[i].category.title}) }}" class="f1-s-4 cl8 hov-cl10 trans-03">
                                                {{ news[i].category.title }}
                                            </a>

                                            <span class="f1-s-3 m-rl-3">
                                                -
                                            </span>

                                            <span class="f1-s-3">
                                                {{ news[i].createdat | date('M d') }}
                                            </span>
                                        </div>

                                        <p class="f1-s-11 cl6 txt-center p-b-16">{{ news[i].content }}</p>

                                        <a href="{{ path('news_detail', {news: news[i].id, title: news[i].title}) }}" class="f1-s-1 cl9 hov-cl10 trans-03">
                                            Lire plus
                                            <i class="m-l-2 fa fa-long-arrow-alt-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Pagination -->
                </div>

                    <div class="col-md-10 col-lg-4 p-b-80">
                        <div class="p-l-10 p-rl-0-sr991">
                            <!-- Banner -->
                            <div class="flex-c-s">
                                <a href="#">
                                    <img class="max-w-full" src="images/banner-02.jpg" alt="IMG">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
    {% if news | length == 20 or app.request.get('p') != 0 %}
        <div class="col-md-10">
            <div class="flex-wr-c-c m-rl--7 p-t-28">
                <a href="{% if app.request.get('p') == 0 or app.request.get('p') is not defined  %}#{% else %}?q={{ app.request.get('q') }}&p={{ app.request.get('p') - 20 }}{% endif %}" class="flex-c-c pagi-item hov-btn1 trans-03 m-all-7 pagi-active"> < </a>
                <a href="{% if news | length < 20 %}#{% else %}?q={{ app.request.get('q') }}&p={{ app.request.get('p') + 20 }}{% endif %}" class="flex-c-c pagi-item hov-btn1 trans-03 m-all-7"> > </a>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block scripts %}
    <script></script>
{% endblock %}