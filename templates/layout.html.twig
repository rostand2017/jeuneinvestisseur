<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block title %}Rejoignez la Première communauté d’investisseurs crypto d’Afrique{% endblock %}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Rostand Fotso">

    <meta name="description" content="{% block metadescription %}Notre but est de  vous permettre  d'apréhender, de comprendre la technologie blockchain et l'univers des cryptos-monnaies en général {% endblock %}">
    <meta property="og:site_name" content="Crypto with Tincs">
    <meta property="og:image" itemprop="image primaryImageOfPage" content="{% block pageImage %}{{ asset('images/icons/logo-01.png') }}{% endblock %}">
    <meta name="twitter:title" property="og:title" itemprop="name" content="{%block title2 %}Crypto with tincs - Rejoignez la Première communauté d’investisseurs crypto d’Afrique{%endblock%}">
    <meta name="twitter:description" property="og:description" itemprop="description" content="{% block metadescription2 %}{% endblock %}">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="{{ asset('images/icons/logo-01.png') }}"/>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('fonts/fontawesome-5.0.8/css/fontawesome-all.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('fonts/iconic/css/material-design-iconic-font.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/animate/animate.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/css-hamburgers/hamburgers.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/animsition/css/animsition.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('css/util.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
    {% block styles %}{% endblock %}
    <!--===============================================================================================-->
</head>
<body class="animsition">

<!-- Header -->
<header>
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <div class="topbar">
            <div class="content-topbar container h-100">
                <div class="left-topbar">
                    <a href="{{ path('index') }}" class="left-topbar-item">
                        Crypto With Tincs
                    </a>
                </div>

                <div class="right-topbar">

                    <a href="https://twitter.com/stevetincs" target="_blank">
                        <span class="fab fa-twitter"></span>
                    </a>

                    <a href="https://www.youtube.com/channel/UCM_dNcA_FWMHtsfoOjYhEGQ"  target="_blank">
                        <span class="fab fa-youtube"></span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Header Mobile -->
        <div class="wrap-header-mobile">
            <!-- Logo moblie -->
            <div class="logo-mobile">
                <a href="{{ path('index') }}"><img src="{{ asset('images/icons/logo-02.jpg') }}" alt="IMG-LOGO"></a>
            </div>

            <!-- Button show menu -->
            <div class="btn-show-menu-mobile hamburger hamburger--squeeze m-r--8">
					<span class="hamburger-box">
						<span class="hamburger-inner"></span>
					</span>
            </div>
        </div>

        <!-- Menu Mobile -->
        <div class="menu-mobile">
            <ul class="topbar-mobile">
                <li class="left-topbar">
                    <a href="{{ path('index') }}" class="left-topbar-item">
                        Crypto With Tincs
                    </a>
                </li>

                <li class="right-topbar">

                    <a href="https://twitter.com/stevetincs" target="_blank">
                        <span class="fab fa-twitter"></span>
                    </a>

                    <a href="https://www.youtube.com/channel/UCM_dNcA_FWMHtsfoOjYhEGQ" target="_blank">
                        <span class="fab fa-youtube"></span>
                    </a>
                </li>
            </ul>

            <ul class="main-menu-m">
                <li>
                    <a href="{{ path('index') }}">Accueil</a>
                </li>
                {% for category in categories %}
                    <li>
                        <a href="{{ path('news_category', {category: category.id, title: category.title}) }}">{{ category.title }}</a>
                    </li>
                {% endfor %}
                <li>
                    <a href="https://coinmarketcap.com/" target="_blank">coinmarketcap</a>
                </li>
            </ul>
        </div>

        <!--  -->
        <div class="wrap-logo container">
            <!-- Logo desktop -->
            <div class="logo">
                <a href="{{ path('index') }}"><img src="{{ asset('images/icons/logo-02.jpg') }}" alt="LOGO"></a>
            </div>

            <!-- Banner -->
            <div class="banner-header">
                <!--<a href="https://themewagon.com/themes/free-bootstrap-4-html5-news-website-template-magnews2/"><img src="{{ asset('images/banner-01.jpg') }}" alt="IMG"></a>-->
                {% set btnCurr = app.session.get('btc') %}
                {% if btnCurr %}
                <span><img width="40" src="{{ btnCurr.logo }}" alt=""> <span class="ml-1 mr-2">${{ btnCurr.quote.USD.price | round(2, 'floor') }}</span>
                    {% if btnCurr.quote.USD.percent_change_24h > 0  %}<span class="text-success"><i class="fa fa-caret-up"></i> {{ btnCurr.quote.USD.percent_change_24h | round(2, 'floor') }}%</span>
                    {% else %}<span class="text-danger"> <i class="fa fa-caret-down"></i> {{ btnCurr.quote.USD.percent_change_24h | round(2, 'floor') }}%</span> {% endif %}
                </span>
                {%  endif %}
            </div>
        </div>

        <!--  -->
        <div class="wrap-main-nav">
            <div class="main-nav">
                <!-- Menu desktop -->
                <nav class="menu-desktop">
                    <a class="logo-stick" href="{{ path('index') }}">
                        <img src="{{ asset('images/icons/logo-01.png') }}" alt="LOGO">
                    </a>

                    <ul class="main-menu">
                        <li class="main-menu-active">
                            <a href="{{ path('index') }}">Accueil</a>
                        </li>
                        {% for categoryWithNews in categoriesWithNews %}
                            <li class="mega-menu-item">
                                <a href="{{ path('news_category', {category: categoryWithNews.category.id, title: categoryWithNews.category.title}) }}">{{ categoryWithNews.category.title }} </a>

                                {% if categoryWithNews.news | length > 0 %}
                                    <div class="sub-mega-menu">
                                        <div class="nav flex-column nav-pills" role="tablist">
                                            <a class="nav-link active" data-toggle="pill" href="#enter-1" role="tab">Tout</a>
                                        </div>

                                        <div class="tab-content">
                                            <div class="tab-pane show active" id="enter-1" role="tabpanel">
                                                <div class="row">
                                                    {% for news in categoryWithNews.news %}
                                                        <div class="col-3">
                                                            <!-- Item post -->
                                                            <div>
                                                                <a href="{{ path('news_detail', {news: news.id, metatitle: news.metatitle}) }}" class="wrap-pic-w hov1 trans-03">
                                                                    <img src="{{ thumbnails_blog_url }}{{ news.image }}" alt="{{ news.title }}">
                                                                </a>

                                                                <div class="p-t-10">
                                                                    <h5 class="p-b-5">
                                                                        <a href="{{ path('news_detail', {news: news.id, metatitle: news.metatitle}) }}" class="f1-s-5 cl3 hov-cl10 trans-03">
                                                                            {{ news.title }}
                                                                        </a>
                                                                    </h5>

                                                                    <span class="cl8">
																<a href="{{ path('news_category', {category: news.category.id, title: news.category.title}) }}" class="f1-s-6 cl8 hov-cl10 trans-03">
																	{{ news.category.title }}
																</a>

																<span class="f1-s-3 m-rl-3">
																	-
																</span>

																<span class="f1-s-3">
																	{{ news.createdat | date('M d') }}
																</span>
															</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </li>
                        {% endfor %}
                        <li>
                            <a href="https://coinmarketcap.com/" target="_blank">coinmarketcap</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>

{% block body %}{% endblock %}

<!-- Footer -->
<footer>
    <div class="bg2 p-t-40 p-b-25">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 p-b-20">
                    <div class="size-h-3 flex-s-c">
                        <a href="{{ path('index') }}">
                            <img class="max-s-full" width="20%" src="{{ asset('images/icons/logo-01.png') }}" style="margin-bottom: 27px;" alt="LOGO">
                        </a>
                    </div>

                    <div>
                        <p class="f1-s-1 cl11 p-b-16">
                            Notre but : vous permettre  d'apréhender, de comprendre la technologie blockchain et l'univers des cryptos-monnaies en général
                            afin d'être un investisseur rentable. <br>
                            Rejoignez la Première communauté d’investisseurs crypto d’Afrique
                        </p>

                        <p class="f1-s-1 cl11 p-b-16">
                            Une question? Contactez nous sur <a href="mailto:cryptowithtincs@gmail.com">cryptowithtincs@gmail.com</a>
                        </p>

                        <div class="p-t-15">

                            <a href="https://twitter.com/stevetincs" target="_blank" class="fs-18 cl11 hov-cl10 trans-03 m-r-8">
                                <span class="fab fa-twitter"></span>
                            </a>

                            <a href="https://www.youtube.com/channel/UCM_dNcA_FWMHtsfoOjYhEGQ"  target="_blank" class="fs-18 cl11 hov-cl10 trans-03 m-r-8">
                                <span class="fab fa-youtube"></span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-6 p-b-20">
                    <div class="size-h-3 flex-s-c">
                        <h5 class="f1-m-7 cl0">
                            Catégories
                        </h5>
                    </div>

                    <ul class="m-t--12">
                        {% for category in categories %}
                            <li class="how-bor1 p-rl-5 p-tb-10">
                                <a href="{{ path('news_category', {category: category.id, title: category.title}) }}" class="f1-s-5 cl11 hov-cl10 trans-03 p-tb-8">
                                    {{ category.title }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="bg11">
        <div class="container size-h-4 flex-c-c p-tb-15">
				<span class="f1-s-1 cl0 txt-center">
					<a href="#" class="f1-s-1 cl10 hov-link1"><!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved - crypto with Tincs
                    </a>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
				</span>
        </div>
    </div>
</footer>

<!-- Back to top -->
<div class="btn-back-to-top" id="myBtn">
    <span class="symbol-btn-back-to-top">
        <span class="fas fa-angle-up"></span>
    </span>
</div>

<!--===============================================================================================-->
<script src="{{ asset('vendor/jquery/jquery-3.2.1.min.js') }}"></script>
<!--===============================================================================================-->
<script src="{{ asset('vendor/animsition/js/animsition.min.js') }}"></script>
<!--===============================================================================================-->
<script src="{{ asset('vendor/bootstrap/js/popper.js') }}"></script>
<script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
<!--===============================================================================================-->
<script src="{{ asset('js/main.js') }}"></script>
{% block scripts %}{% endblock %}
</body>
</html>